{
  "name": "react-refactor-tool-on-vscode",
  "displayName": "react-refactor-tool-on-vscode",
  "description": "An intelligent react refactoring plugin",
  "version": "0.0.1",
  "publisher": "rrtv-team",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-refactor-tool-on-vscode"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "author": {
    "name": "dawnchan030920",
    "url": "https://github.com/dawnchan030920"
  },
  "homepage": "https://github.com/react-refactor-tool-on-vscode/RRTV-client/blob/main/README.md",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./client/src/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "rrtv-client.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "rrtv-client.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "compile": "tsc -b",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
